{
  "name": "Middle messenger yandex praktikum",
  "version": "1.0.0",
  "description": "Messenger spa",
  "scripts": {
    "start": "node ./server.js",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "stylelint": "stylelint **/*.scss",
    "stylelint:fix": "stylelint **/*.scss --fix",
    "test": "mocha --require ts-node/register --require ./mochaSetup.js './src/**/*.test.ts'",
    "build": "webpack --mode=production --node-env=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "watch": "webpack --watch",
    "serve": "webpack serve"
  },
  "keywords": [],
  "author": "Stanislav",
  "license": "ISC",
  "devDependencies": {
    "@types/chai": "4.3.5",
    "@types/handlebars": "4.1.0",
    "@types/mocha": "10.0.1",
    "@types/node": "18.14.1",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.54.0",
    "ajv": "8.12.0",
    "chai": "4.3.7",
    "css-loader": "6.7.4",
    "eslint": "8.35.0",
    "express": "^4.18.2",
    "handlebars": "4.7.7",
    "handlebars-loader": "1.7.3",
    "html-webpack-plugin": "5.5.1",
    "husky": "^8.0.3",
    "jsdom": "22.0.0",
    "lint-staged": "^13.2.2",
    "mini-css-extract-plugin": "2.7.6",
    "mocha": "10.2.0",
    "prettier": "2.8.8",
    "sass": "1.62.1",
    "sass-loader": "13.3.0",
    "sinon": "15.1.0",
    "style-loader": "3.3.3",
    "stylelint": "15.2.0",
    "stylelint-config-recommended-scss": "9.0.1",
    "ts-loader": "9.4.3",
    "ts-node": "10.9.1",
    "typescript": "4.9.5",
    "uuid": "9.0.0",
    "webpack": "5.84.1",
    "webpack-cli": "5.1.1",
    "webpack-dev-server": "4.15.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "npm run lint:fix",
      "npm run stylelint:fix",
      "npm run test",
      "npm audit",
      "git add"
    ]
  }
}
